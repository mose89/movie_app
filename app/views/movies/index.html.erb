<div class="text-center">
  <% if current_user %>
    <p> <%= "Welcome #{current_user.name}!" %> </p><br>
      <%= link_to(destroy_user_session_path, method: :delete) do %>
        <h3 class="btn btn-primary"> Log Out </h3>
      <% end %>
    </div>
  <% else %>
  <h3> <%= link_to "Log in to add a movie or to leave a review", new_user_session_path %>
    </h3>
  <% end %>
  <br>

<div class="wrapper">
  <div class="container">
    <table>
      <td>
        <div class="col-md-3">
          <% @movies.each do |movie| %>
            <tr>
              <td>
                <strong><h2><%= movie.title %></h2></strong>
              </td>
            </tr>
            <tr>
              <td>
                <%= image_tag movie.image.url(:medium) %>
              </td>
            </tr>
            <tr>
              <td>
                <strong><h3> Rating: <%= movie.rating %></h3></strong>
              </td>
            </tr>
            <tr>
              <td>
                <%= link_to(movie_path(movie)) do%>
                <h3 class="btn btn-lg btn-primary"> Read More </h3>
                <% end %>
              </td>
            </tr>
          <% end %>
        </div>
      </td>
    </table>
  </div>
</div>



  <br>
  <div class="container">
    <%= link_to(new_movie_path) do %>
    <div class="text-center">
      <p class="btn btn-lg btn-danger"> Add New Movie</p>
    </div>
    <% end %>
  </div>
