<div class="wrapper show">
  <div class="row">
    <div class="col-md-6">
      <p>
        <%= image_tag(@movie.image.url(:medium), size: "400x400") %>
      </p>
      <p>
        <strong>Title:</strong>
        <%= @movie.title %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= @movie.description %>
      </p>

      <p>
        <strong>Rating:</strong>
        <%= @avg_rating %>
      </p>

      <p>
        <strong>Created By:</strong>
        <%= @movie.user.name %>
      </p>
    </div>
  </div>
</div>

<% if current_user %>
<div class="wrapper">
<%= link_to("Add a Review", new_movie_review_path(@movie.id), class: "btn btn-primary")  %>
</div>
<% end %>

<div class="wrapper">
<% @movie.reviews.each do |review| %>
<div class="row">
<%= review.rating %><br>
<%= review.comment %><br>
</div>
<% end %>
</div>


<div class="wrapper">
<% if current_user %>
  <% if @movie.user_id == current_user.id %>
    <%= link_to(edit_movie_path(@movie)) do %>
      <div class="btn btn-danger">Edit</div>
    <% end %>
      </div>

    <%= link_to(@movie, method: :delete, data: { confirm: 'Are you sure?' }) do%>
     <div class="btn btn-danger">Delete Movie</div>
    <% end %>
  <% end %>
</div>
<% end %>


<div class="wrapper">
<div class="btn btn-lg btn-primary">
    <%= link_to(movies_path) do %>
      <div class="color-white">Back</div>
    <% end %>
  </div>
</div>

